<Window x:Class="eee.small_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eee"
        mc:Ignorable="d"
        Title="small_win" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="201*"/>
            <RowDefinition Height="138*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите название нового типа товара" HorizontalAlignment="Center"/>
        <TextBox x:Name="new_type" Grid.Row="1"/>
        <Button x:Name="save" Content="Сохранить" Grid.Row="2" Click="save_Click"/>
    </Grid>
</Window>